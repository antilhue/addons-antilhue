<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.search</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="inside">
                  <div class="col-xs-12 col-lg-6 o_setting_box" id="search_algolial_setting" title="Algolial">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label string="Algolia's API."/>
                            <div class="text-muted">
                                Use  fast  Algolia auto-complete for product search at your shop
                            </div>
                            <div class="content-group">
                                <div class="row mt16" title="">
                                    <label for="service_algolia_id" string="Algolia Service" class="col-lg-4 o_light_label"/>
                                    <field name="service_algolia_id" class="oe_inline"/>
                                    <button name="uptate_website_products_algolia" string="Update" type="object" class="oe_inline fa fa-arrow-right oe_link"/>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </field>
    </record>
</odoo>