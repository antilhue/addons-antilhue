<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product_documents" inherit_id="website_sale.product" name="Product Documents" active="False" customize_show="True" >
        <xpath expr="//div[@id='product_details']" position="inside">
            <t t-if="product.document_website_ids">
                <hr/>
                <span><strong>Related Documents:</strong></span>
                <br/>
                <t t-foreach="product.document_website_ids" t-as="document">
                    <a t-att-href="'/product/download/document?document_id=%i' % document.id">
                        <span t-esc="document.name" class="fa fa-download" />
                    </a>
                </t>
            </t>
        </xpath>
    </template>
</odoo>

